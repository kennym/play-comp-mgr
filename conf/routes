# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           Application.index

# Map static resources from the /app/public folder to the /public path
GET     /public/                                    staticDir:public

# Import Secure routes
*       /                                           module:secure

# Concursantes
GET     /concursante/index/?                        Concursantes.index
POST    /concursantes/{id}/trabajo/subir/?          Concursantes.subir_trabajo
GET     /concursantes/{id}/trabajo/ver/?            Concursantes.mostrar_trabajo

# Organizadores
GET     /organizadores/index/?                      Organizadores.index
POST    /organizadores/concurso/{id}/iniciar/?      Organizadores.iniciarConcurso
POST    /organizadores/concurso/{id}/parar/?        Organizadores.pararConcurso

# Jurados
GET     /jurados/index/?                            Jurados.index

# Catch all
*       /{controller}/{action}                      {controller}.{action}

# Import CRUD routes
GET     /admin/?                                    Admin.index
*       /admin                                      module:crud
