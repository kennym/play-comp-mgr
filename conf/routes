# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                           Application.index

# Map static resources from the /app/public folder to the /public path
GET     /public/                                    staticDir:public

# Import CRUD routes
GET     /admin/?                                    Admin.index
*       /admin                                      module:crud

# Import Secure routes
*       /                                           module:secure

# Concursantes
GET     /concursante/index/?                        Concursantes.index
POST    /concursantes/{id}/trabajo/subir/?          Concursantes.subir_trabajo
GET     /concursantes/{id}/trabajo/ver/?            Concursantes.mostrar_trabajo

# Concursos
POST    /concursos/{id}/iniciar/?                   Concursos.iniciarConcurso
GET     /concursos/{id}/parar/?                     Concursos.pararConcurso

# Catch all
*       /{controller}/{action}                      {controller}.{action}
